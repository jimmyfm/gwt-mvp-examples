<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .header {
      font-size: 110%;
      font-weight: bold;
      color: #555
    }

    .label {
      font-weight: bold;
    }
  </ui:style>

  <g:HTMLPanel>
    <table width="100%">
      <tr>
        <td colspan='2' align='center' class='{style.header}'>Contact Details</td>
      </tr>
      <tr>
        <td class='{style.label}'>Name:</td>
        <td>
          <g:TextBox ui:field='name'/>
        </td>
      </tr>
      <tr>
        <td class='{style.label}'>Address:</td>
        <td>
          <g:TextBox ui:field='address'/>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
